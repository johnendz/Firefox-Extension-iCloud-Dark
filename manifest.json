{
  "description": "Ativar modo escuro no iCloud",
  "manifest_version": 2,
  "name": "iCloud Dark",
  "author": "Johnendz",
  "version": "1.3",

  "content_scripts": [
    {
      "matches": ["*://www.icloud.com/*", "*://idmsa.apple.com/*", "*://appleid.apple.com/*", "*://www.icloud.com/applications/*"],
      "exclude_matches": ["*://www.icloud.com/applications/calendar/*", "*://www.icloud.com/applications/photos/*", "*://www.icloud.com/applications/iclouddrive/*", "*://www.icloud.com/applications/notes3/*", "*://www.icloud.com/applications/reminders2/*", "*://www.icloud.com/applications/pages/*", "*://www.icloud.com/applications/numbers/*", "*://www.icloud.com/applications/keynote/*", "*://www.icloud.com/applications/fmf/*", "*://www.icloud.com/applications/find/*"],
      "css":["style.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "128": "icons/128.png",
    "256": "icons/256.png"
  }
}